{
    "manifest_version": 2,
    "name": "YouTube Redirector",
    "version": "1.0",
    "description": "Redirects YouTube videos to a no-cookies and no ads version.",
    "permissions": [
      "tabs",
      "*://www.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["redirect.js"],
        "run_at": "document_start"
      }
    ],
    "browser_specific_settings": {
  "gecko": {
    "id": "cython.chev@gmail.com",
    "update_url": "https://your-domain.com/updates.json"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}
  